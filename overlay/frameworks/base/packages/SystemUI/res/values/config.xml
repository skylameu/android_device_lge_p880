<resources>
    <!-- The default tiles to display in QuickSettings -->
    <string name="quick_settings_tiles_default" translatable="false">
        wifi,bt,cell,data,airplane,rotation,flashlight,location,notifications
    </string>

    <!-- Show camera affordance on Keyguard -->
    <bool name="config_keyguardShowCameraAffordance">true</bool>

    <!-- Disable expensive shadows -->
    <bool name="config_recents_fake_shadows">true</bool>

    <!-- Use hardware layers in recents -->
    <bool name="config_recents_use_hardware_layers">true</bool>

    <!-- Whether to enable to show task manager or not -->
    <!--This gives a small graphic bug when using quick pulldown, 
    because of refreshTaskManagerView. -->
    <bool name="config_showTaskManagerSwitcher">false</bool>

    <!-- Whether to enable data switch or not -->
    <bool name="config_enableDataSwitch">true</bool>

<!--TEST--> 
    <!-- Doze: does this device support STATE_DOZE and STATE_DOZE_SUSPEND? -->
    <bool name="doze_display_state_supported">true</bool>
    <bool name="doze_pulse_on_pick_up">true</bool>
    
    <!-- Doze: shake accelerometer threshold minimum is 2 and maximum is 10-->
    <integer name="doze_shake_accelerometer_threshold">10</integer>
</resources>
 
